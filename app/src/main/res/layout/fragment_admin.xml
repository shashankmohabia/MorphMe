<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashankmohabia.morphme.MainGame.Fragments.AdminFragments.AdminFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/allUsers"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/loginPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        app:cardBackgroundColor="@color/logoColor"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/allUsers"
            android:layout_alignStart="@+id/allUsersText"
            android:layout_alignTop="@+id/login"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/allUsersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Users"
                android:textColor="#FF000000"
                android:textSize="25dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
